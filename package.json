{
    "name": "printer-daemon",
    "version": "1.0.0",
    "description": "Silent PDF print daemon for POS/Invoices on Windows (SumatraPDF + Express + pkg).",
    "author": "Ramiz Murtaza",
    "license": "MIT",
    "type": "commonjs",
    "main": "src/server.js",
    "bin": "src/server.js",
    "scripts": {
      "start": "node src/server.js",
      "build": "pkg . --targets node18-win-x64 --output dist/PrintDaemon.exe"
    },
    "pkg": {
      "assets": [
        "bin/SumatraPDF.exe"
      ],
      "outputPath": "dist"
    },
    "engines": {
      "node": ">=18"
    },
    "dependencies": {
      "express": "^5.1.0",
      "multer": "^2.0.2",
      "pdf-to-printer": "^5.6.0"
    },
    "devDependencies": {
      "pkg": "^5.8.1"
    }
  }
  